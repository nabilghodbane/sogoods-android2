        <ImageView
            android:id="@+id/imageViewCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:onClick="processOnclickCamera"
            android:src="@drawable/image_search_take_picture2x" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_bar" >

        <EditText
            android:id="@+id/editSearchPhotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/search_field"
            android:paddingLeft="30dp"
            android:paddingRight="42dp"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/imageViewSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editSearchPhotos"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/search_glass" />

        <ImageView
            android:id="@+id/imageViewCut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/editSearchPhotos"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:onClick="onclickCutButton"
            android:src="@drawable/bouton_quitter2x"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/product_detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        />

