<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sogoods="http://schemas.android.com/apk/res/com.hitechno.sogoods"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/dark_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/headerBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navbar" >

        <ImageView
            android:id="@+id/bttBackBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:clickable="true"
            android:src="@drawable/bouton_back2x"
            android:visibility="visible" 
            android:onClick="processBackButton"/>

        <TextView
            android:id="@+id/lbNameHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/sogoods_white_color"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout android:id="@+id/reimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ProgressBar
            android:id="@+id/pbLoading"
             style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible" 
            android:indeterminateDrawable="@drawable/progressbar3">
        </ProgressBar>

        <TextView
            android:id="@+id/txtFansNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="14dp"
            android:textColor="@color/light_gold_color" />

        <TextView
            android:id="@+id/bttIsFan"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/txtFansNumber"
            android:layout_below="@+id/txtFansNumber"
            android:textColor="@color/gold_color"
            android:clickable="true"
            android:onClick="processClickIsFan"
            android:background="@drawable/add_product_switch"
            android:gravity="center"
            android:padding="5dp"/>

        <ImageView
            android:id="@+id/imgBrandLarge"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:contentDescription="@string/access_profile_image"
            android:src="@drawable/brands_loading_image" />

    </RelativeLayout>

    <RadioGroup
        android:id="@+id/brand_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.hitechno.sogoods.views.FuturaToggleButton
            android:id="@+id/brand_shops_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/hover"
            android:onClick="onBrandFilterClicked"
            android:text="@string/shops"
            android:textOff="@string/shops"
            android:textOn="@string/shops"
            sogoods:typeface="futura_std_medium" />

        <com.hitechno.sogoods.views.FuturaToggleButton
            android:id="@+id/brand_product_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/hover"
            android:onClick="onBrandFilterClicked"
            android:text="@string/products"
            android:textOff="@string/products"
            android:textOn="@string/products"
            sogoods:typeface="futura_std_medium" />

        <!-- <com.hitechno.sogoods.views.FuturaToggleButton
            android:id="@+id/brand_news_button"
            style="@style/ProfileRadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/hover"
            android:onClick="onBrandFilterClicked"
            android:text="@string/news"
            android:textOff="@string/news"
            android:textOn="@string/news"
            sogoods:typeface="futura_std_medium" /> -->

        <com.hitechno.sogoods.views.FuturaToggleButton
            android:id="@+id/brand_catelogs_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/hover"
            android:onClick="onBrandFilterClicked"
            android:text="@string/catalogs"
            android:textOff="@string/catalogs"
            android:textOn="@string/catalogs"
            sogoods:typeface="futura_std_medium" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/brand_stores_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical" />
	<LinearLayout android:id="@+id/liner_bran_product"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"/>
</LinearLayout>