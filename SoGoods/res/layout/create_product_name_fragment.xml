<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/headerDiary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navbar" >

        <ImageView
            android:id="@+id/bttBackDiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:clickable="true"
            android:onClick="processBackButton"
            android:src="@drawable/bouton_back2x"
            android:visibility="visible" />

        <TextView
            android:id="@+id/bttOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/quiz2x"
            android:gravity="center"
            android:text="@string/OK"
            android:textColor="@color/sogoods_white_color"
            android:visibility="visible" />
    </RelativeLayout>

    <EditText
        android:id="@+id/editNamepro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/add_product_field2x" 
        android:layout_margin="10dp"
        android:paddingLeft="15dp"
        android:textColor="@color/gold_color"
        android:cursorVisible="true"
        android:textCursorDrawable="@drawable/cursor_drawable"/>

    <EditText
        android:id="@+id/editDesPro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_textview"
        android:layout_margin="10dp"
        android:paddingLeft="15dp"
        android:textColor="@color/gold_color" 
        android:cursorVisible="true"
        android:textCursorDrawable="@drawable/cursor_drawable"
        />

    <TextView
        android:id="@+id/txtLimitDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sogoods_white_color"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:maxLength="240"/>

</LinearLayout>