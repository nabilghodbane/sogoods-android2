    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="33"
            android:background="@drawable/product_and_profile_background_with_right_and_bottom_border"
            android:orientation="horizontal" >

            <com.hitechno.sogoods.views.FuturaTextView
                android:id="@+id/like_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/sogoods_gray_color"
                android:textStyle="bold"
                sogoods:typeface="futura_std_medium" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/like_product"
                android:src="@drawable/product_full_heart2x" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="33"
            android:background="@drawable/product_and_profile_background_with_right_and_bottom_border"
            android:orientation="horizontal" >

            <com.hitechno.sogoods.views.FuturaTextView
                android:id="@+id/product_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/sogoods_gray_color"
                android:textStyle="bold"
                sogoods:typeface="futura_std_medium" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/product_likes"
                android:src="@drawable/product_full_heart2x" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="33"
            android:background="@drawable/product_and_profile_background_with_right_and_bottom_border"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/product_full_comment2x" />

            <com.hitechno.sogoods.views.FuturaTextView
                android:id="@+id/product_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/imageView1"
                android:textColor="@color/sogoods_gray_color"
                android:textStyle="bold"
                sogoods:typeface="futura_std_medium" />
        </RelativeLayout>
    </LinearLayout>

