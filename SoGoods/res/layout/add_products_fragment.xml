<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:sogoods="http://schemas.android.com/apk/res/com.hitechno.sogoods"
	android:id="@+id/add_products_fragment" android:layout_width="match_parent"
	android:layout_height="match_parent"
	>

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:orientation="vertical">

		<LinearLayout android:id="@+id/add_product_category_layout"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:orientation="horizontal" android:weightSum="7"
			 android:gravity="center_horizontal">

			<Spinner android:id="@+id/add_product_category"
				android:layout_width="0dp" android:hint="@string/enter_category_name"
				android:layout_height="wrap_content" android:layout_weight="6"
				android:padding="0dp" android:layout_margin="0dp" />

			<com.hitechno.sogoods.views.BooleanView
				android:id="@+id/add_product_category_status" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:gravity="center"
				android:layout_gravity="center_vertical" android:layout_weight="1"
				android:visibility="invisible" android:contentDescription="@string/access_is_valid_input_image" />
		</LinearLayout>

		<LinearLayout android:id="@+id/add_product_brand_layout"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:orientation="horizontal" android:weightSum="7"
		 android:gravity="center_horizontal">

			<com.hitechno.sogoods.views.FuturaAutoCompleteTextView
				android:id="@+id/add_product_brand_name" android:hint="@string/enter_brand_name"
				android:layout_width="0dp" android:layout_height="wrap_content"
				android:layout_weight="6" sogoods:typeface="futura_std_medium"
				 android:singleLine="true" />

			<com.hitechno.sogoods.views.BooleanView
				android:id="@+id/add_product_brand_name_status"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:gravity="center" android:layout_gravity="center_vertical"
				android:layout_weight="1" android:visibility="invisible"
				android:contentDescription="@string/access_is_valid_input_image" />
		</LinearLayout>

		<LinearLayout android:id="@+id/add_product_name_layout"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:orientation="horizontal" android:weightSum="7"
			 android:gravity="center_horizontal">

			<com.hitechno.sogoods.views.FuturaEditText
				android:id="@+id/add_product_name" android:hint="@string/enter_product_name"
				android:inputType="textCapSentences" android:layout_width="0dp"
				android:layout_height="wrap_content" android:layout_weight="6"
				sogoods:typeface="futura_std_medium" 
				android:singleLine="true" />

			<com.hitechno.sogoods.views.BooleanView
				android:id="@+id/add_product_name_status" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:gravity="center"
				android:layout_gravity="center_vertical" android:layout_weight="1"
				android:visibility="invisible" android:contentDescription="@string/access_is_valid_input_image" />
		</LinearLayout>

		<LinearLayout android:id="@+id/add_product_description_layout"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:orientation="horizontal" android:weightSum="7"
			android:gravity="center_horizontal">

			<com.hitechno.sogoods.views.FuturaEditText
				android:id="@+id/add_product_description" android:hint="@string/enter_product_description"
				android:layout_width="0dp" android:layout_height="wrap_content"
				android:layout_weight="6" sogoods:typeface="futura_std_medium"
				 android:lines="3" android:inputType="textCapSentences" />

			<com.hitechno.sogoods.views.BooleanView
				android:id="@+id/add_product_description_status"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:gravity="center" android:layout_gravity="center_vertical"
				android:layout_weight="1" android:visibility="invisible"
				android:contentDescription="@string/access_is_valid_input_image" />
		</LinearLayout>

		<LinearLayout android:id="@+id/add_product_like_layout"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:orientation="horizontal" android:weightSum="7"
			 android:gravity="center_horizontal">

			<Spinner android:id="@+id/add_product_like"
				android:layout_width="0dp" android:hint="@string/enter_category_name"
				android:layout_height="wrap_content" android:layout_weight="6"
				android:padding="0dp" android:layout_margin="0dp" />

			<com.hitechno.sogoods.views.BooleanView
				android:id="@+id/add_product_like_status" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:gravity="center"
				android:layout_gravity="center_vertical" android:layout_weight="1"
				android:visibility="invisible" android:contentDescription="@string/access_is_valid_input_image" />
		</LinearLayout>

		<ImageView android:id="@+id/add_product_image"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal" />

		<LinearLayout android:id="@+id/add_product_button_layout"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:orientation="horizontal" android:weightSum="7"
			 android:gravity="center_horizontal">

			<com.hitechno.sogoods.views.FuturaButton
				android:id="@+id/add_product_button" android:text="@string/add_product"
				android:layout_width="0dp" android:layout_height="wrap_content"
				android:layout_weight="6" android:enabled="false" sogoods:typeface="futura_std_medium"
				 />

			<ProgressBar android:id="@+id/add_product_progress"
				android:layout_width="0dp" android:layout_height="wrap_content"
				android:layout_weight="1" android:gravity="center"
				android:layout_gravity="center_vertical" android:visibility="gone"
				style="@android:style/Widget.ProgressBar.Small.Inverse" />
		</LinearLayout>

	</LinearLayout>

</ScrollView>