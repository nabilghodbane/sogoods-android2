<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sogoods="http://schemas.android.com/apk/res/com.hitechno.sogoods"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:background="@drawable/menu_normal_cell">
	     <com.hitechno.sogoods.views.FuturaTextView
	         android:id="@+id/idtextfilter"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:layout_alignParentLeft="true"
	         android:layout_centerVertical="true"
             sogoods:typeface="futura_std_medium"
             android:textColor="@color/gold_color"
	        android:background="@drawable/selected_leftmenu"
	        android:paddingLeft="15dp"/>
	 </RelativeLayout>
</LinearLayout>
