<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="75"
            android:orientation="horizontal" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/idrelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@drawable/navbar" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Notification Setting"
                android:textColor="@color/gold_color"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="75"
            android:orientation="horizontal" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25" >

            <!--
            <ListView
                android:id="@+id/listViewSettingNotifi"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </ListView>
            -->

            <RelativeLayout
                android:id="@+id/res1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textViewNewFollower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:text="New Followers"
                    android:textColor="@color/gold_color"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/checkBoxNewFollower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:paddingRight="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/res2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/res1" >

                <TextView
                    android:id="@+id/textViewNewCommentPro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:text="New Comment On Product"
                    android:textColor="@color/gold_color"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/checkBoxNewCommentPro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:paddingRight="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/res3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/res2" >

                <TextView
                    android:id="@+id/textViewFollowingAddpro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:text="Following Add Product"
                    android:textColor="@color/gold_color"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/checkBoxFollowingAddPro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:paddingRight="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/res4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/res3" >

                <TextView
                    android:id="@+id/textViewFollowingAddComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:text="Following Add Comment"
                    android:textColor="@color/gold_color"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/checkBoxFollowingAddComm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:paddingRight="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/res5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/res4" >

                <TextView
                    android:id="@+id/textViewFollowingAddPic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:text="Following Add Picture"
                    android:textColor="@color/gold_color"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/checkBoxFollowingAddPic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:paddingRight="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/respros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/res5" >

                <ProgressBar
                    android:id="@+id/pbLoading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:visibility="invisible" >
                </ProgressBar>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/res6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/respros" >

                <Button
                    android:id="@+id/bttSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/quiz2x"
                    android:gravity="center"
                    android:text="Save"
                    android:textColor="@color/sogoods_white_color"
                    android:visibility="visible" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>