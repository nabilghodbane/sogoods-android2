<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sogoods="http://schemas.android.com/apk/res/com.hitechno.sogoods"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <com.hitechno.sogoods.views.FuturaTextView android:id="@+id/brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        sogoods:typeface="futura_std_medium"
      />
    
    <com.hitechno.sogoods.views.FuturaButton android:id="@+id/like_brand"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        sogoods:typeface="futura_std_medium"
      />
</LinearLayout>