<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- ViewPager -->
    <style name="PagerTitleStrip">
        <item name="android:background">@color/pager_title_strip_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/sogoods_bright_color</item>
    </style>
    <!-- hongmophi -->
    <style name="SelectedProfile">
        <item name="android:textColor">@color/sogoods_bright_color</item>
    </style>
    <!-- end -->
    <style name="Page">
        <item name="android:background">@drawable/page_background</item>
    </style>
   <style name="CustomProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">5.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar_horizontal</item>
        <item name="android:minHeight">2.0dip</item>
    </style>

</resources>