<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sogoods="http://schemas.android.com/apk/res/com.hitechno.sogoods"
    android:id="@+id/profile_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/category_gradient" >

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:paddingBottom="10dp" >

                <ImageView
                    android:id="@+id/imageFlags"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/viet_nam" />

                <TextView
                    android:id="@+id/usname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/imageFlags"
                    android:text="sjgdsfhdfghf"
                    android:textColor="@color/sogoods_gray_color" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imgAffinity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/affinity_big" />

            <TextView
                android:id="@+id/txtPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imgAffinity"
                android:layout_marginRight="35dp"
                android:layout_marginTop="47dp"
                android:rotation="-15"
                android:text="90 %"
                android:textColor="@color/sogoods_white_color"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textAffinity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txtPercent"
                android:layout_marginRight="23dp"
                android:rotation="-15"
                android:text="Affinity"
                android:textColor="@color/sogoods_white_color" />

            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminateDrawable="@drawable/progressbar3" />
        </RelativeLayout>

