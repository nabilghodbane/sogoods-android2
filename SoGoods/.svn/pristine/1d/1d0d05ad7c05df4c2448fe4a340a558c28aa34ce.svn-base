    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="33"
            android:background="@drawable/product_and_profile_background_with_right_and_bottom_border"
            android:orientation="horizontal" >

            <com.hitechno.sogoods.views.FuturaTextView
                android:id="@+id/profile_following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/sogoods_gray_color"
                sogoods:typeface="futura_std_medium"
                android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="33"
            android:background="@drawable/product_and_profile_background_with_right_and_bottom_border"
            android:orientation="horizontal" >

            <com.hitechno.sogoods.views.FuturaTextView
                android:id="@+id/profile_follows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/sogoods_gray_color"
                sogoods:typeface="futura_std_medium" 
                android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="33"
            android:background="@drawable/product_and_profile_background_with_right_and_bottom_border"
            android:orientation="horizontal" >

            <com.hitechno.sogoods.views.FuturaTextView
                android:id="@+id/like_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/sogoods_gray_color"
                sogoods:typeface="futura_std_medium" 
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/like_profile"
                android:src="@drawable/product_full_heart2x" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>