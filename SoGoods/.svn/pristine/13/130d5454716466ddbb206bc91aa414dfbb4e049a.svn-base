<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sogoods="http://schemas.android.com/apk/res/com.hitechno.sogoods"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="75"
            android:orientation="horizontal" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/idrelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@drawable/navbar" >

            <RadioGroup
                android:id="@+id/filters_buttons"
                android:layout_width="200dp"
                android:layout_height="31dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/right_menu_switch_background"
                android:orientation="horizontal" >

                <com.hitechno.sogoods.views.FuturaToggleButton
                    android:id="@+id/btt_filter_Categories"
                   
                    android:layout_width="98dp"
                    android:layout_height="29dp"
                    android:background="@drawable/right_menu_switch"
                    android:onClick="onPrductFilterClicked"
                    android:text="@string/categories"
                    android:textOff="@string/categories"
                    android:textOn="@string/categories" 
                    sogoods:typeface="futura_std_medium" />

                <com.hitechno.sogoods.views.FuturaToggleButton
                    android:id="@+id/btt_filter_brands"
                    android:layout_width="98dp"
                    android:layout_height="29dp"
                    android:background="@drawable/right_menu_switch"
                    android:onClick="onPrductFilterClicked"
                    android:text="@string/brands"
                    android:textOff="@string/brands"
                    android:textOn="@string/brands"
                    sogoods:typeface="futura_std_medium" />
            </RadioGroup>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filter_product_detail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>