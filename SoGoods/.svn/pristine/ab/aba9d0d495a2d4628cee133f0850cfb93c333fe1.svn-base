<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sogoods="http://schemas.android.com/apk/res/com.hitechno.sogoods"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashscreen"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/headerDiary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/navbar" >

                <ImageView
                    android:id="@+id/bttBackDiary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:clickable="true"
                    android:onClick="processBackButton"
                    android:src="@drawable/bouton_back2x"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/lbNameHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/addProduct"
                    android:textColor="@color/gold_color"
                    android:textStyle="bold" />
            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/headerDiary"
                android:isScrollContainer="true"
                android:overScrollMode="always"
                android:scrollbars="vertical" >

                <LinearLayout
                    android:id="@+id/pager_with_filter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/relCategories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selected_leftmenu"
                        android:clickable="true"
                        android:onClick="processClickCate" >

                        <TextView
                            android:id="@+id/txtCategories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:text="@string/categoryTitle"
                            android:textColor="@color/gold_color" />

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/add_product_arrow" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relaBrand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selected_leftmenu"
                        android:clickable="true"
                        android:onClick="processClickBrand" >

                        <TextView
                            android:id="@+id/txtBrand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:text="@string/brandName"
                            android:textColor="@color/gold_color" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/add_product_arrow" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relatProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selected_leftmenu"
                        android:clickable="true"
                        android:onClick="processClickProductName" >

                        <TextView
                            android:id="@+id/txtProductName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:text="@string/productName"
                            android:textColor="@color/gold_color" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/add_product_arrow" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_margin="15dp"
                        android:background="@drawable/add_product_switch_background"
                        android:orientation="horizontal"
                        android:weightSum="100" >

                        <RelativeLayout
                            android:id="@+id/relDream"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="25"
                            android:layout_marginTop="1dp"
                            android:clickable="true"
                            android:onClick="clickDream" >

                            <TextView
                                android:id="@+id/txtDream"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:text="@string/likeTypeDream"
                                android:textColor="@color/brow_color"
                                android:textSize="10sp"
                                android:textStyle="normal" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relLike"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:layout_weight="25"
                            android:layout_marginTop="1dp"
                            android:clickable="true"
                            android:onClick="clickLike" >

                            <TextView
                                android:id="@+id/txtLike"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:text="@string/likeTypeLike"
                                android:textColor="@color/brow_color"
                                android:textSize="10sp"
                                android:textStyle="normal" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relNextPurchase"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:layout_weight="25"
                            android:clickable="true"
                            android:onClick="clickNextPurchase" 
                            android:layout_marginTop="1dp"
                            android:background="@drawable/add_product_switch">

                            <TextView
                                android:id="@+id/txtNextPurchase"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:text="@string/likeTypeNext"
                                android:textColor="@color/brow_color"
                                android:textSize="10sp"
                                android:textStyle="normal" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relHaveGotIt"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_weight="25"
                            android:clickable="true"
                            android:layout_marginTop="1dp"
                            android:onClick="clickHaveGotIt" >

                            <TextView
                                android:id="@+id/txtHaveGotIt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:text="@string/likeTypeOwned"
                                android:textColor="@color/brow_color"
                                android:textSize="10sp"
                                android:textStyle="normal" />
                        </RelativeLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/imgProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:onClick="onclickImageProduct"
                            android:src="@drawable/add_product_no_picture" />
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginBottom="2dp"
                android:gravity="bottom"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/bttValidatePro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shop_concierge_button2x"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="processAddProductButton"
                    android:text="@string/validateTitle"
                    android:textColor="@color/gold_color" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/liner_content_addpro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/headerDiary"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/liner_contentbrand_addpro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>