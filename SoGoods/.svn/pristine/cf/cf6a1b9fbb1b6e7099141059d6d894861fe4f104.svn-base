<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sogoods="http://schemas.android.com/apk/res/com.hitechno.sogoods"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/brand_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
             />

        <com.hitechno.sogoods.views.FuturaTextView
            android:id="@+id/brand_name"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/brand_image"
            android:layout_toLeftOf="@+id/imageView1"
            android:layout_toRightOf="@+id/brand_image"
            android:textColor="@color/brow_color"
            sogoods:typeface="futura_std_medium" 
            android:layout_centerInParent="true" 
            android:textSize="25sp"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/add_product_arrow" />
    </RelativeLayout>

</LinearLayout>