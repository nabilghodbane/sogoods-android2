            <com.hitechno.sogoods.views.FuturaEditText android:textSize="16.0sp" android:textColor="@color/text1" android:gravity="left" android:id="@+id/signup_password" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/required" android:singleLine="true" android:layout_toLeftOf="@+id/signup_password_clear" android:layout_toRightOf="@+id/signup_password_title" android:layout_centerVertical="true" android:inputType="textPassword" android:imeOptions="actionDone" sogoods:typeface="futura_std_light" />
            <ImageView android:gravity="center" android:id="@+id/signup_password_clear" android:background="@drawable/bouton_quitter2x" android:visibility="invisible" android:layout_width="15.0dip" android:layout_height="15.0dip" android:layout_marginRight="3.0dip" android:layout_toLeftOf="@+id/signup_password_status" android:layout_centerVertical="true" android:contentDescription="@string/app_name" />
