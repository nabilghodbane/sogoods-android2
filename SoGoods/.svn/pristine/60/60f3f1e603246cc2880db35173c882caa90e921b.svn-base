<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sogoods="http://schemas.android.com/apk/res/com.hitechno.sogoods"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingRight="20dp"
        android:paddingTop="40dp" >

        <ImageView
            android:id="@+id/imgCut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/product_full_close2x" />
    </RelativeLayout>

    <com.hitechno.sogoods.views.FuturaTextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:text="@string/forgotPassMes"
        android:textColor="@color/gold_color"
        sogoods:typeface="futura_std_medium" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp" >

        <com.hitechno.sogoods.views.FuturaEditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/champ_email_connexion"
            android:inputType="textEmailAddress"
            android:textColor="@color/gold_color"
            android:textCursorDrawable="@color/gold_color"
            android:paddingLeft="5dp"
            sogoods:typeface="futura_std_medium" 
            android:hint="@string/yourEmail"/>

        <ImageView
            android:id="@+id/imageViewCut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:src="@drawable/product_full_close" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtValidateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/champ_email_connexion"
            android:gravity="center"
            android:text="@string/validateTitle"
            android:textColor="@color/sogoods_white_color"
            android:textStyle="bold"/>
    </RelativeLayout>

    <com.hitechno.sogoods.views.FuturaTextView  
        android:id="@+id/txtSendNewspass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="30dp"
        android:text="@string/sendNewPassword"
        android:textColor="@color/gold_color"
        sogoods:typeface="futura_std_medium" />

</LinearLayout>