<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sogoods="http://schemas.android.com/apk/res/com.hitechno.sogoods"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFF"
    tools:ignore="PxUsage" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="@string/my_profile"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/title"
        android:layout_marginLeft="8dp"
        android:text="@string/cancel" />

    <TextView
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:text="@string/toSave"
        android:textColor="#d6b8a5"
        android:textSize="20sp" />

    <com.hitechno.sogoods.views.CustomFontTextView
        android:id="@+id/progressPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/add_product"
        android:textColor="#d6b8a5" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/CustomProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressPercent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <RelativeLayout
        android:id="@+id/pictureLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="8dp" >

        <com.hitechno.sogoods.views.CustomFontTextView
            android:id="@+id/pictureLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/photo"
            android:textColor="@color/black"
            android:textSize="16sp"
            sogoods:customFont="fonts/HelveticaNeue.ttf" />

        <ImageView
            android:id="@+id/picturePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/photo"
            android:scaleType="fitCenter"
            android:src="@drawable/bg_nopicture_150x1502x" />
    </RelativeLayout>

    <View
        android:id="@+id/sep1"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@id/pictureLayout"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="8dp"
        android:background="#f1f1f1" />

    <TableLayout
        android:id="@+id/form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sep1"
        android:stretchColumns="1" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="8dp" >

            <com.hitechno.sogoods.views.CustomFontTextView
                android:id="@+id/genderLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="8dp"
                android:text="@string/sex"
                android:textColor="@color/black"
                android:textSize="16sp"
                sogoods:customFont="fonts/HelveticaNeue.ttf" />

            <Spinner
                android:id="@+id/genderSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/genderClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:contentDescription="@string/add_comment"
                android:src="@drawable/bouton_quitter2x" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <View
                android:id="@+id/sep2"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="8dp"
                android:layout_span="3"
                android:background="#f1f1f1" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="8dp" >

            <com.hitechno.sogoods.views.CustomFontTextView
                android:id="@+id/firstNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/prenom"
                android:textColor="@color/black"
                android:textSize="16sp"
                sogoods:customFont="fonts/HelveticaNeue.ttf" />
        </TableRow>
    </TableLayout>

    <View
        android:id="@+id/sep3"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@id/sep1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="8dp"
        android:background="#f1f1f1" />

    <com.hitechno.sogoods.views.CustomFontTextView
        android:id="@+id/lastNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sep3"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:text="@string/nom"
        android:textColor="@color/black"
        android:textSize="16sp"
        sogoods:customFont="fonts/HelveticaNeue.ttf" />

</RelativeLayout>