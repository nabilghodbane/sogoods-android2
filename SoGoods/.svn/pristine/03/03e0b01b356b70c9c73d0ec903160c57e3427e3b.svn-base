<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sogoods="http://schemas.android.com/apk/res/com.hitechno.sogoods"
    android:id="@+id/news_scroll_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <ImageView android:id="@+id/news_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"/>
    
    <com.hitechno.sogoods.views.FuturaTextView android:id="@+id/news_item_text"
    	android:layout_width="match_parent"	android:layout_height="match_parent"
    	sogoods:typeface="futura_std_medium"  />
    
</LinearLayout>